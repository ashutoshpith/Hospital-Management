
<%= simple_form_for(@roomtable) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.collection_select :inpatient_id, Inpatient.order(:date_of_add), :id, :date_of_add, prompt: "Choose a Inpatient date" %>

    <%= f.input :room_no %>
    <%= f.input :room_type %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
