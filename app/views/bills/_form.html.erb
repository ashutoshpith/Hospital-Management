
<%= simple_form_for(@bill) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
  
    <%= f.collection_select :outpatient_id, Outpatient.order(:dt), :id, :dt, prompt: "Choose a Date" %>

    <%= f.input :doctor_charge %>
    <%= f.input :medicine_charge %>
    <%= f.input :room_charge %>
    <%= f.input :opteration_charge %>
    <%= f.input :no_day %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
